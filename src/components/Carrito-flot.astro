<div id="checkout-overlay" class="fixed inset-0 blur-xs grayscale-50 backdrop-blur-sm hidden"></div>

<div>
    <!-- Carrito flotante -->
    <button id="cart-button" class="fixed top-2/5 right-2 bg-amber-500 text-white px-4 py-2 rounded-lg shadow-lg">
      <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 10V6a3 3 0 0 1 3-3v0a3 3 0 0 1 3 3v4m3-2 .917 11.923A1 1 0 0 1 17.92 21H6.08a1 1 0 0 1-.997-1.077L6 8h12Z"/>
      </svg>
       Productos: <span id="cart-count">0</span>
    </button>
  
    <!-- Ventana modal de checkout -->
    <div id="checkout-modal" class="fixed inset-y-0 right-0 max-h-[100vh] flex items-center justify-center hidden z-50">
      <div class="bg-white p-6 shadow-lg w-96 text-center">
        <div class="overflow-auto max-h-[80vh]">
          <h2 class="text-xl font-semibold">Checkout</h2>
          <div id="cart-items" class="mt-4 text-left space-y-2"></div>
        </div>
        <div class="mt-4">
          <p id="cart-total" class="text-lg font-semibold">Total: $0.00</p>
          <div class="flex justify-between mt-4">
            <button id="continue-shopping" class="bg-gray-300 px-4 py-2 rounded-lg">Seguir comprando</button>
            <button class="bg-green-500 text-white px-4 py-2 rounded-lg">Pagar</button>
          </div>
        </div>
      </div>
    </div>
  
    <!-- Importar el script del carrito -->
    <script src="/cart.js" defer></script>
</div>
