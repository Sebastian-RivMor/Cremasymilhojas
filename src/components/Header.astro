            </div>
            <button class="cursor-pointer group-hover:bg-white group-hover:text-black bg-emerald-400 text-white rounded-lg px-4 py-2 mt-4 transition duration-300"
            >
              Descubre más
            </button>
          </div>
        </div>
      </section>
    </div>
  </div>

  <!-- Sección Productos Destacados -->
  <div class="mt-20 px-3 border-l-4 border-l-amber-300 text-3xl font-bold text-gray-800">
    Productos Destacados
  </div>
  
  <div class="pt-2 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Producto 1 --> 
    <div class="group relative overflow-hidden bg-linear-to-r from-orange-400 to-orange-500 rounded-lg shadow-lg cursor-pointer transition-colors duration-300 hover:bg-gradient-to-65 hover:from-orange-400/90 hover:to-orange-500/90">
